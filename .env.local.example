# Local development profile
DJANGO_ENV=local
DJANGO_DEBUG=1
DJANGO_SECRET_KEY=local-dev-secret-change-this
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost,testserver,0.0.0.0
DJANGO_CSRF_TRUSTED_ORIGINS=http://127.0.0.1,http://localhost,http://0.0.0.0,http://127.0.0.1:8000,http://localhost:8000

# Reverse proxy and security
USE_X_FORWARDED_HOST=1
SECURE_SSL_REDIRECT=0
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=0
SECURE_HSTS_PRELOAD=0
SECURE_CONTENT_TYPE_NOSNIFF=1
SECURE_REFERRER_POLICY=strict-origin-when-cross-origin
X_FRAME_OPTIONS=DENY
CSRF_COOKIE_HTTPONLY=0

# Marketplace runtime
OFFER_EXPIRY_MINUTES=180
OFFER_REMINDER_MINUTES=60
APPOINTMENT_PROVIDER_CONFIRM_MINUTES=720
APPOINTMENT_CUSTOMER_CONFIRM_MINUTES=720
APPOINTMENT_SLOT_BUFFER_MINUTES=45
PHONE_VERIFICATION_CODE_TTL_MINUTES=10
PHONE_VERIFICATION_MAX_ATTEMPTS=5

# Credit economy
INITIAL_PROVIDER_CREDITS=10
QUOTE_CREDIT_COST=1

# Reliability
LOGIN_RATE_LIMIT_MAX_ATTEMPTS=15
LOGIN_RATE_LIMIT_WINDOW_SECONDS=60
ACTION_RATE_LIMIT_MAX_ATTEMPTS=40
ACTION_RATE_LIMIT_WINDOW_SECONDS=60
POST_IDEMPOTENCY_TTL_SECONDS=10
LIFECYCLE_HEARTBEAT_STALE_SECONDS=180
LIFECYCLE_LOCK_TTL_SECONDS=120
MARKETPLACE_LIFECYCLE_WEB_REFRESH_INTERVAL_SECONDS=20
NAV_STREAM_INTERVAL_SECONDS=8
NAV_STREAM_MAX_DURATION_SECONDS=55
NAV_STREAM_REOPEN_MIN_SECONDS=2
NOTIFICATION_UNREAD_CACHE_SECONDS=6
HOUSEKEEPING_INTERVAL_SECONDS=3600
IDEMPOTENCY_RETENTION_DAYS=2
WORKFLOW_EVENT_RETENTION_DAYS=90
ACTIVITY_LOG_RETENTION_DAYS=90
ERROR_LOG_RETENTION_DAYS=30
LIFECYCLE_HEALTH_TOKEN=

# Realtime messaging (optional; required for multi-instance websocket fanout)
REDIS_URL=
